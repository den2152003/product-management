extends ../../layout/default.pug

block main
  .container.my-3
    .row
      .col-12
        include ../../partial/list-btn-users.pug 

    .row(data-users-accept=user.id)
      each user in users
        .col-6
          div(class="box-user") 
            div(class="inner-avatar")
              img(src=(user.avatar ? user.avatar : "/images/ava-default.png") alt=user.fullName)
            div(class="inner-info")
              div(class="inner-name") #{user.fullName}
              div(class="inner-buttons")
                button(
                  class="btn btn-sm btn-primary mr-1 btn-accept-friend"
                  btn-accept-friend=user.id
                ) Chấp nhận
                button(
                  class="btn btn-sm btn-secondary btn-refuse-friend"
                  btn-refuse-friend=user.id
                ) Xóa
                button(
                  class="btn btn-sm btn-secondary btn-deleted-friend"
                  btn-deleted-friend=user.id
                  disabled
                ) Đã xóa
                button(
                  class="btn btn-sm btn-primary btn-accepted-friend"
                  btn-accepted-friend=user.id
                  disabled
                ) Đã chấp nhận

block script 
  script(src="/js/users.js") 