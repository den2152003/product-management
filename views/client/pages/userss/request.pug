extends ../../layout/default.pug

block main
  .container.my-3
    .row
      .col-12
        include ../../partial/list-btn-users.pug 

    .row
      each user in users
        .col-6
          div(class="box-user add") 
            div(class="inner-avatar")
              img(src=(user.avatar ? user.avatar : "/images/ava-default.png") alt=user.fullName)
            div(class="inner-info")
              div(class="inner-name") #{user.fullName}
              div(class="inner-buttons")
                button(
                  class="btn btn-sm btn-primary mr-1 btn-add-friend"
                  btn-add-friend=user.id
                ) Kết bạn
                button(
                  class="btn btn-sm btn-secondary btn-cancel-friend"
                  btn-cancel-friend=user.id
                ) Hủy

block script 
  script(src="/js/users.js") 