extends ../../layout/default.pug

block main
    .container.my-3
        .row
            .col-12
                h2 Tạo phòng chat nhóm
        
        .row.mt-3
            .col-6
                form(
                action=`/rooms-chat/create`
                method="POST"
                )
                    div(class="form-group")
                        label(for="title") Tên phòng
                        input(
                        type="text"
                        class="form-control"
                        id="title"
                        name="title"
                        required
                    )
                    div(class="form-group")
                        label Bạn bè
                        each friend in friends
                            div(class="form-check")
                                input(
                                    class="form-check-input"
                                    type="checkbox"
                                    value=friend.user_id
                                    id=`user-${friend.user_id}`
                                    name="usersId"
                                )
                                label(class="form-check-label" for=`user-${friend.user_id}`) #{friend.fullName}
                    
                    button(
                        type="submit"
                        class="btn btn-primary"
                    ) Tạo phòng