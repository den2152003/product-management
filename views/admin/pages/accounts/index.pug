extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)

    if(role.permissions.includes("accounts_view"))
        h1(class="mb-4") Danh sách tài khoản
        .card.mb-3
            .card-header Danh sách
            .card-body
                .row
                    .col-8
                    .col-4.text-right
                        if(role.permissions.includes("accounts_create"))
                            a(
                                href=`/admin/accounts/create`
                                class="btn btn-outline-success"
                            ) + Thêm mới 


                table(
                    class = "table table-hover table-sm"
                )
                    thead
                        tr
                        th STT
                        th Avatar
                        th Họ tên
                        th Phân quyền
                        th Email
                        th Trạng thái
                        th Hành động

                    tbody
                        each item, index in records
                            tr
                            td #{index + 1}
                            td
                                img(
                                src=item.avatar
                                alt=item.fullName
                                width="100px"
                                height="auto"
                                )
                            td #{item.fullName}
                            td #{item.role.title}
                            td #{item.email}
                            td
                                - const canEdit = role.permissions.includes("accounts_edit")
                                if(item.status == "active")
                                    a(
                                        href="javascript:;" 
                                        class="badge badge-success"
                                        data-status = item.status 
                                        data-id = item._id 
                                        button-change-status=canEdit
                                    ) Hoạt động
                                else
                                    a(
                                        href="javascript:;" 
                                        class="badge badge-danger"
                                        data-status = item.status 
                                        data-id = item._id 
                                        button-change-status=canEdit
                                    ) Dừng hoạt động
                            td
                                a(
                                    href=`/admin/accounts/detail/${item._id}`
                                    class="btn btn-secondary btn-sm"
                                ) Chi tiết
                                
                                if(role.permissions.includes("accounts_edit"))
                                    a(
                                        href=`/admin/accounts/edit/${item._id}`
                                        class="btn btn-warning btn-sm ml-1"
                                    ) Sửa

                                if(role.permissions.includes("accounts_delete"))
                                    button(
                                        class="btn btn-danger btn-sm ml-1"
                                        button-delete 
                                        data-id=item._id
                                    ) Xóa
    
    form(
        action="", 
        method="post"
        id = "form-change-status"
        data-path = "/admin/accounts/change-status"
    ) 

    script(src="/admin/js/account.js") 