extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)
    +alert-success(5000)

    
    h1(class="mb-4") chỉnh sửa tài khoản
    form(
        
        action=`/admin/accounts/edit/${records._id}?_method=PATCH`
        id="form-edit-accounts"
        method="POST"
        enctype="multipart/form-data"
    )

        div(class="form-group")
            label(for="title") Họ tên
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value=records.fullName
            )
            

        div(class="form-group")
            label(for="category") Email
            input(
                type="text" 
                class="form-control"
                id="email"
                name="email" 
                value=records.email
            )
        
        div(class="form-group")
            label(for="category") Mật khẩu
            input(
                type="text" 
                class="form-control"
                id="password"
                name="password" 
                value=records.password 
            )

        div(class="form-group")
            label(for="category") Số điện thoại
            input(
                type="text" 
                class="form-control"
                id="phone"
                name="phone" 
                value=records.phone
            )

        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
                value=records.avatar
            )
            img(src=records.avatar, 
                alt=""
            )

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(records.status == 'active' ? true : false)
            )
            label(for="statusActive" class="form-check-label") Hoạt động

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="status"
                value="inactive"
                checked=(records.status == 'inactive' ? true : false)
            )
            label(for="statusInactive" class="form-check-label") Dừng hoạt động

        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật

    script(src="/admin/js/product.js")