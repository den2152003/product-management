extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)

    if (records.title)
        h1(class="mb-4") #{records.title}

    if (records.thumbnail)
        div(class="mb-4")
            img(
                src=records.thumbnail
                style="width: 100px"
            )

    if (records.description)
        span Mô tả: 
        div(class="mb-4") !{records.description}

    div(class="mb-4")
        span Trạng thái: 
        if (records.status === "active")
            span(class="badge badge-success") Hoạt động
        else
            span(class="badge badge-danger") Dừng hoạt động
    
    a(
        href=`/admin/products-category/edit/${records._id}`
        class="btn btn-warning btn-sm ml-1"
    ) Chỉnh Sửa