extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)
    +alert-success(5000)

    
    h1(class="mb-4") chỉnh sửa danh mục

    form(
        action=`/admin/products-category/edit/${records._id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )

        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
                value=records.title
            )

        div(class="form-group")
            label(for="parent_id") Danh mục cha
            select(
                class="form-control"
                id="parent_id"
                name="parent_id" 
            )
                option(value="") -- Danh mục cha --
                if(records)
                    each item in records
                        option(value=item.id) #{item.title}

        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows="5"
                value=records.description
            ) #{records.description}



        div(
            class="form-group"
            upload-image
        )
            label(for="thumbnail") Ảnh
            input(
                type="file"
                class="form-control-file "
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
                value=records.thumbnail
            )
            img(src=records.thumbnail, 
                alt=""
                upload-image-preview
            )

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="active"
                value="active"
                checked=(records.active == 'active' ? true : false)
            )
            label(for="statusActive" class="form-check-label") Hoạt động

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="active"
                value="inactive"
                checked=(records.active == 'inactive' ? true : false)
            )
            label(for="statusInactive" class="form-check-label") Dừng hoạt động

        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật