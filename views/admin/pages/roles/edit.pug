extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)
    +alert-success(5000)

    if(role.permissions.includes("roles_edit"))
        h1(class="mb-4") chỉnh sửa Nhóm quyền

        form(
            action=`/admin/roles/edit/${data._id}?_method=PATCH`
            method="POST"
        )

            div(class="form-group")
                label(for="title") Tiêu đề
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    required
                    value=data.title
                )

            div(class="form-group")
                label(for="desc") Mô tả
                textarea(
                    class="form-control"
                    id="desc"
                    name="description"
                    rows="5"
                    value=data.description
                ) #{data.description}



            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật